<Window x:Class="horoscope.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:horoscope"
        mc:Ignorable="d"
        Title="Выбор цвета" Height="305.494" Width="490.13" Background="White" >
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <GroupBox Header="Выбрать цвет" Padding="10" FontSize="20" Margin="10">
            <StackPanel>
                <RadioButton x:Name="rBlue" Margin="5"  Content="Синий" Checked="rBlue_Checked"/>
                <RadioButton x:Name="rYellow" Margin="5" Content="Жёлтый" Checked="rYellow_Checked"/>
                <RadioButton x:Name="rOrange" Margin="5" Content="Оранжевый" Checked="rOrange_Checked"/>
            </StackPanel>
        </GroupBox>
        <Rectangle Name="recColor" Grid.Column="1"  HorizontalAlignment="Left" Height="180" Margin="25" Stroke="Black" VerticalAlignment="Top" Width="150"/>
    </Grid>
</Window>
